<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Email</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
      <tr>
          
        <td><%= u.email %></td>
        <td><%= link_to(image_tag("show.png", :border=>0),{:action=>'show',:id => u.id})%></td></td>
        <% if u.is_admin == true %>
          <td>Admin</td>
          <td>Admin</td>
        <% else %>
          <td><%= link_to(image_tag("edit.gif", :border=>0),{:action => 'edit',:id => u.id})%></td></td>
          <td><%= link_to(image_tag("delete.gif", :border=>0),{:action => 'delete',:id => u.id})%></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
  <%= page_entries_info @users %>