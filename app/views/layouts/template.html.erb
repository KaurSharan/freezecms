<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Modern Business - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
     <%= stylesheet_link_tag 'bootstrap','bootstrap.min','font-awesome.min','modern-business',media: 'all' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
   
    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 1000 //changes the speed
    })
    </script>


        <%= javascript_include_tag 'jquery','jquery-1.11.1.min','bootstrap.min' %>

</head>

<body style="background-image:url('/upload/<%= @back.photo %>');">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                    <a class="navbar-brand" href="#">
                    <%= @proname || "Admin page" %></a>
                
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-right">
                    <% @menus.each do |m| %>
                    <li>   
                        <%= link_to(m.name,{:controller=>'theme',:action=>'searchpage',:id=>m.name}) %>
                    
                    </li>
                    <% end %>

                    
                     <li>
                        <a href="/public/logout">Logout</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Header Carousel -->
    
        <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
                <% i = 0 %>
            <% @sliders.each do |slider| %>
                <% if i == 0  %>
                    <div class="item active">
                        <div class="fill" style="background-image:url('/upload/<%= slider.pic %>');"></div>
                        <div class="carousel-caption">
                            <h2>Caption <%= i %></h2>
                        </div>
                    </div>
                <% else %>
                    <div class="item">
                        <div class="fill" style="background-image:url('/upload/<%= slider.pic %>');"></div>
                        <div class="carousel-caption">
                            <h2>Caption <%= i %></h2>
                        </div>
                    </div>
                <% end %>
                <% i +=1 %>
            <% end %>

            <!-- <div class="item">
                <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>
                <div class="carousel-caption">
                    <h2>Caption 2</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>
                <div class="carousel-caption">
                    <h2>Caption 3</h2>
                </div>
            </div> -->
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
       <ul style="float:right;width:144px;height:38px;background:#000;
       color:#fff;padding: 6px;text-align: center;margin: auto auto;">
        <li><a href="/admin/user" target="_blank">Edit Template</a></li>
    </ul>
    
<%=  yield %>
        <!-- Footer -->
        <footer style="width:100%;height:50px;background:#222;color:#fff;text-align:center;margin:20px 5px;">

            <div class="row">
                <div class="col-lg-12">           
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

   
</body>

</html>
