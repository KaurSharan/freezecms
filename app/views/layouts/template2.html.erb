<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Business Casual - Start Bootstrap Theme</title>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag 'bootstrap','bootstrap.min','font-awesome.min','business-casual',media: 'all' %>

    <%= javascript_include_tag 'jquery','jquery-1.11.1.min','bootstrap.min' %>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 1000 //changes the speed
    })
    </script>

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

</head>

<body style="background-image:url('/upload/<%= @back.photo %>');">

    <div class="brand"><%= @proname.name %></div>
    <!-- <div class="address-bar">3481 Melrose Place | Beverly Hills, CA 90210 | 123.456.7890</div> -->

    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <a class="navbar-brand" href="Home"><%= @proname || "Admin page"%></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <% @menus.each do |m| %>
                    <li>   
                        <%= link_to(m.name,{:controller=>'theme2',:action=>'searchpage',:id=>m.name}) %>
                    
                    </li>
                    <% end %>

                    
                     <li>
                        <a href="/public/logout">Logout</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
   <ul style="float:right;width:144px;height:38px;background:#000;
       color:#fff;padding: 6px;text-align: center;margin: auto auto;">
        <li><a href="/admin/user" target="_blank">Edit Template</a></li>
    </ul>
    <div class="container">

                <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <div id="carousel-example-generic" class="carousel slide">
                        <!-- Indicators -->
                        <ol class="carousel-indicators hidden-xs">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
            <div class="carousel-inner">
                             <% i = 0 %>
            <% @sliders.each do |slider| %>
                <% if i == 0  %>
                    <div class="item active">
                        <%= image_tag("/upload/"+slider.pic, :class => 'fill',:alt=>'') %>
                        
                        <div class="carousel-caption">
                            <h2>Caption <%= i %></h2>
                        </div>
                    </div>
                <% else %>
                    <div class="item">
                        <%= image_tag("/upload/"+slider.pic, :class => 'fill',:alt=>'') %>
                        <div class="carousel-caption">
                            <h2>Caption <%= i %></h2>
                        </div>
                    </div>
                <% end %>
                <% i +=1 %>
            <% end %>

            </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="icon-prev"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="icon-next"></span>
                        </a>
                    </div>
                    <h2 class="brand-before">
                        <small>Welcome to</small>
                    </h2>
                    <h1 class="brand-name">Business Casual</h1>
                    <hr class="tagline-divider">
                    <h2>
                        <small>By
                            <strong>Start Bootstrap</strong>
                        </small>
                    </h2>
                </div>
            </div>
        </div>
        </div>
     
<%= yield %>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; Your Freeze CMS 2016</p>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>
