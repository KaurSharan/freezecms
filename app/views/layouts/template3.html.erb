<!DOCTYPE HTML>
<html>
	<head>
		<title>Freeze CMS</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,700,500,900' rel='stylesheet' type='text/css'>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<%= javascript_include_tag 'skel.min','skel-panels','init' %>

			<%= stylesheet_link_tag 'skel-noscript','style3','font-awesome.min','style-desktop',media: 'all' %>
<script type="text/javascript">
	$(document).ready(function(){
		<% if @menus && @menus.size > 0 %>
		$("body,html").animate({scrollTop:"1000px"},1000,function({
			return false;
		}));
		<% end %>
	});
</script>
		
	</head>
	<body class="homepage" style="background-image:url('/upload/<%= @back.photo %>');">

	<!-- Header -->
		<div id="header">
			<div id="nav-wrapper"> 
				<!-- Nav -->
				<nav id="nav">
					<ul>
						<% @menus.each do |m| %>
                    <li>   
                        <%= link_to(m.name,{:controller=>'theme3',:action=>'searchpage',:id=>m.name}) %>
                    
                    </li>
                    <% end %>

                    
                     <li>
                        <a href="/public/logout">Logout</a>
                    </li>
					</ul>
				</nav>
					   <ul style="float:right;width:144px;height:38px;background:#000;
       color:#fff;padding: 6px;text-align: center;margin: -40px auto;">
        <li><a href="/admin/user" target="_blank">Edit Template</a></li>
    </ul>
			</div>

			<div class="container"> 
				
				<!-- Logo -->
				<div id="logo">
				
					<h1><a href="#"><%= @proname.name %></a></h1>
					<span class="tag">By Freeze CMS</span>
				</div>
			</div>
		</div>
		<div id="featured">
			<div class="container">
				<header>
					<h2>Welcome to Freeze CMS</h2>
				</header>
				
<%= yield %>
		</div>
		</div>
	<!-- Tweet -->
		<div id="tweet">
			<div class="container">
				<section>
