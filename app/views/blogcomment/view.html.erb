      <tr>
        <th>S.no</th>
        <th>Blog</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @blogcomment.each do |b| %>
      <tr>
          <td>1</td>
        <td><%= b.comment %></td>
