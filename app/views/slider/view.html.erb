<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>S.no</th>
        <th>Slider</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @slider.each do |s| %>
      <tr>
          <td><%= s.id %></td>
        <td><%= s.pic %></td>
        <td><%= link_to(image_tag("show.png", :border=>0),{:action=>'show',:id => s.id})%></td></td>
        <td><%= link_to(image_tag("edit.gif", :border=>0),{:action => 'edit',:id => s.id})%></td></td>
        <td><%= link_to(image_tag("delete.gif", :border=>0),{:action => 'delete',:id => s.id})%></td>
      </tr>
      <% end %>
    </tbody>
  </table>