<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>S.no</th>
        <th>Menu</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @menu.each do |u| %>
      <tr>
          <td>1</td>
        <td><%= u.name %></td>
        <td><%= link_to(image_tag("show.png", :border=>0),{:action=>'show',:id => u.id})%></td></td>
        <td><%= link_to(image_tag("edit.gif", :border=>0),{:action => 'edit',:id => u.id})%></td></td>
        <td><%= link_to(image_tag("delete.gif", :border=>0),{:action => 'delete',:id => u.id})%></td>
      </tr>
      <% end %>
    </tbody>
  </table>