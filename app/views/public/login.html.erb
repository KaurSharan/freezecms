<section id="login" class="doublediagonal">
            <div class="container">
                <div class="section-heading scrollpoint sp-effect3">
                    <h1>Log In</h1>
                    <div class="divider"></div>
                    <p></p>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                                <div class="col-md-4"></div>
                            <div class="col-md-4 col-sm-4 center scrollpoint sp-effect1">
                                 <%= form_for :user , :url=>{:controller=>'public',:action=>'authenticate'} do |f| %>
                                

                                        <div class="form-group">

                                        <%= f.text_field('email',:required=>"true",:class=>'form-control',:placeholder=>' Email') %>
                                    </div>
                                    <div class="form-group">
                                       <%= f.password_field('password',:required=>true,:class=>'form-control',:placeholder=>'Password') %>
                                    </div>
                                        <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                                <% end %>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
