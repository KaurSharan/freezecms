
<section id="signup" class="doublediagonal">
            <div class="container">
                <div class="section-heading scrollpoint sp-effect3">
                    <h1>User Detail</h1>
                    <div class="divider"></div>
                    <p>Fill User Detail To Login</p>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                        <div class="col-md-4"></div>
                            <div class="col-md-4 col-sm-4 center scrollpoint sp-effect1">
                            <%= form_for :det ,:role =>'form', :url=>{:controller=>'public',:action=>'data'} do |f| %>
                            <%= render partial: "shared/errors", locals: {object: @object} %>
                        <%= f.hidden_field("user_id",:value=>session[:id]) %>
                              
                                    <div class="form-group">

                                        <%= f.text_field('first_name',:class=>'form-control',:placeholder=>' Your First Name') %>
                                    </div>
                                    <div class="form-group">

                                        <%= f.text_field('last_name',:class=>'form-control',:placeholder=>' Your Last Name') %>
                                    </div>
                                    <div class="form-group">

                                        <%= f.text_field('number',:class=>'form-control',:placeholder=>' Your Contact Number') %>
                                    </div>
                                     <div class="form-group">
                                             <%= f.file_field("profile_pic",:value=>'profile pic',:class=>'form-control',:style=>'padding: 0px 24px;') %>
                                        
                                    </div>
                               
                                
                                <%= submit_tag('Submit',:class=>'btn btn-primary col-lg-offset-2') %> 
                               <!--  <button type="submit" class="btn btn-primary btn-lg">Sign Up</button> -->
                           
                                <% end %>    
                             </div>
                        
                            
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
