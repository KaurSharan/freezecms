
<section id="signup" class="doublediagonal">
            <div class="container">
                <div class="section-heading scrollpoint sp-effect3">
                    <h1>Sign up</h1>
                    <div class="divider"></div>
                    <p></p>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                                <div class="col-md-4"></div>
                            <div class="col-md-4 col-sm-4 center scrollpoint sp-effect1">
                                <%= form_for :create , :url=>{:controller=>'public',:action=>'create_user'} do |f| %>
                                
                                
                                <!-- <form role="form"> -->
                  
                                    <div class="form-group">
                                     <%= f.text_field('email',:class=>'form-control',:placeholder=>' Your Email') %>
                                    </div>
                                    <div class="form-group">
                                     <%= f.password_field('password',:class=>'form-control',:placeholder=>'Your Password') %>                                    </div>
                                   
                                    <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                                    <% end %>
                                
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
